<h2>Departments</h2>
<a href="@Url.Action("Create", "Department")" class="btn btn-primary">Create New Department</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Description</th>
            <th>Creation Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.Description</td>
                    <td>@department.CreationDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Details", "Department", new { id = department.Id })" class="btn btn-info">Details</a>
                        <a href="@Url.Action("Edit", "Department", new { id = department.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Department", new { id = department.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

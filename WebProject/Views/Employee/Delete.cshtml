@model WebProject.DAL.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>
    <hr class="bg-danger border-2 border-top border-danger" />

    <div class="alert alert-danger" role="alert">
        <strong>Warning!</strong> Are you sure you want to permanently delete this employee?
    </div>

    <div>
        <h4>Employee Details</h4>
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department?.Name</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
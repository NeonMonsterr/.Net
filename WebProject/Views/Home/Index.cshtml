                            clickable: true,
                        },
                        breakpoints: {
                            320: {
                                slidesPerView: 1,
                                spaceBetween: 40
                            },
                            1200: {
                                slidesPerView: 3,
                                spaceBetween: 20
                            }
                        }
                    });
                }
                if (typeof AOS !== 'undefined') {
                    AOS.init();
                }

                if (typeof PureCounter !== 'undefined') {
                    new PureCounter();
                }
            });
        </script>
